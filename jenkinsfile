pipeline {
	agent any
	
	 stages {
		stage('build'){
                        steps {

				sh '/opt/apache-ant-1.10.1/bin/ant -f build.xml -v'
			   }
			  
			}
		}
	}
	post {
                success {
                        emailext {
                                subject: "${env.JOB_NAME} [${env.BUILD_NUMBER}] Ran!"
				body: "${env.JOB_NAME} [${env.BUILD_NUMBER}] is successful"
				to: "aditya.balhara@gmail.com"
                                }
                        }
                }
	}

