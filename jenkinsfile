pipeline {
	agent any
	
	 stages {
		stage('build'){
                        steps {

				sh '/opt/apache-ant-1.10.1/bin/ant -f build.xml -v'
			   }
			  
			}
		}
		 post {
                success {
                        emailext {
                                subject: "${env.JOB_NAME} Ran!",
                                body: "<p>'${env.JOB_NAME}' is successful</p>",
                                to: "aditya.balhara@gmail.com"
                                }
                        }
                }

	}
